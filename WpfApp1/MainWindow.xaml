<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" 
        Closing="Window_Closing" KeyDown="Window_KeyDown"
        x:Name="okno" RenderTransformOrigin="1,0.5" >
    <DockPanel>
        <DockPanel DockPanel.Dock="Bottom">
            <TextBlock x:Name="TR"></TextBlock>
            <Slider x:Name="R" DockPanel.Dock="Bottom" Maximum="255" Margin="10,10,10,10" ValueChanged="Slider_ValueChanged"></Slider>
        </DockPanel>
        <DockPanel DockPanel.Dock="Bottom">
            <TextBlock x:Name="TG"></TextBlock>
            <Slider x:Name="G" DockPanel.Dock="Bottom" Maximum="255" Margin="10,10,10,10" ValueChanged="Slider_ValueChanged"></Slider>
        </DockPanel>
        <DockPanel DockPanel.Dock="Bottom">
            <TextBlock x:Name="TB"></TextBlock>
            <Slider x:Name="B" DockPanel.Dock="Bottom" Maximum="255" Margin="10,10,10,10" ValueChanged="Slider_ValueChanged"></Slider>
        </DockPanel>
        <Rectangle x:Name="ekran" Fill="Black"  Margin="10,10,10,10"></Rectangle>
    </DockPanel>
</Window>
